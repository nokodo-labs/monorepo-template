{
	"$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
	"prerelease-type": "rc",
	"include-component-in-tag": false,
	"prerelease": false,
	"always-update": false,
	"label": "release: pending",
	"release-label": "release: tagged",
	"extra-label": "bot,release",
	"group-pull-request-title-pattern": "chore(release): release ${branch}",
	"pull-request-title-pattern": "chore${scope}: release${component} v${version}",
	"separate-pull-requests": true,
	"pull-request-header": "## 🚀 Release Notes",
	"changelog-sections": [
		{ "type": "feat", "section": "✨ New Features" },
		{ "type": "fix", "section": "🐛 Bug Fixes" },
		{ "type": "perf", "section": "🔧 Improvements" },
		{ "type": "refactor", "section": "🔧 Improvements" },
		{ "type": "chore", "section": "🧹 Miscellaneous" },
		{ "type": "style", "section": "🧹 Miscellaneous" },
		{ "type": "deps", "section": "🧹 Miscellaneous" },
		{ "type": "ci", "section": "♻️ Ops" },
		{ "type": "ops", "section": "♻️ Ops" },
		{ "type": "build", "section": "♻️ Ops" },
		{ "type": "test", "section": "♻️ Ops" },
		{ "type": "docs", "section": "📚 Documentation" },
		{ "type": "revert", "section": "⏪ Reverts" }
	],
	"packages": {
		".": {
			"package-name": "project-slug",
			"pull-request-title-pattern": "chore(release): release project-slug ${version}"
		},
		"backend/project-slug": {
			"package-name": "library",
			"release-type": "python",
			"include-component-in-tag": true,
			"extra-label": "bot,backend,release",
			"skip-changelog": true
		},
		"backend/api": {
			"package-name": "api",
			"release-type": "python",
			"include-component-in-tag": true,
			"extra-label": "bot,api,release",
			"skip-changelog": true
		},
		"frontend": {
			"package-name": "frontend",
			"release-type": "node",
			"include-component-in-tag": true,
			"extra-label": "bot,frontend,release",
			"skip-changelog": true
		}
	}
}
