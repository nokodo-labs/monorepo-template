{
	"$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
	"prerelease-type": "rc",
	"include-component-in-tag": false,
	"prerelease": true,
	"always-update": false,
	"label": "prerelease: pending",
	"release-label": "prerelease: tagged",
	"extra-label": "bot,release",
	"group-pull-request-title-pattern": "chore(release): release ${branch}",
	"pull-request-title-pattern": "chore${scope}: prerelease${component} v${version}",
	"separate-pull-requests": true,
	"pull-request-header": "## ğŸš€ Release Notes\n\n> This is a prerelease (RC) version.",
	"changelog-sections": [
		{ "type": "feat", "section": "âœ¨ New Features" },
		{ "type": "fix", "section": "ğŸ› Bug Fixes" },
		{ "type": "perf", "section": "ğŸ”§ Improvements" },
		{ "type": "refactor", "section": "ğŸ”§ Improvements" },
		{ "type": "chore", "section": "ğŸ§¹ Miscellaneous" },
		{ "type": "style", "section": "ğŸ§¹ Miscellaneous" },
		{ "type": "deps", "section": "ğŸ§¹ Miscellaneous" },
		{ "type": "ci", "section": "â™»ï¸ Ops" },
		{ "type": "ops", "section": "â™»ï¸ Ops" },
		{ "type": "build", "section": "â™»ï¸ Ops" },
		{ "type": "test", "section": "â™»ï¸ Ops" },
		{ "type": "docs", "section": "ğŸ“š Documentation" },
		{ "type": "revert", "section": "âª Reverts" }
	],
	"packages": {
		".": {
			"package-name": "project-name",
			"pull-request-title-pattern": "chore${scope}: prerelease${component} project-title v${version}"
		},
		"backend/project-name": {
			"package-name": "library",
			"release-type": "python",
			"include-component-in-tag": true,
			"extra-label": "bot,backend,release",
			"skip-changelog": true
		},
		"backend/api": {
			"package-name": "api",
			"release-type": "python",
			"include-component-in-tag": true,
			"extra-label": "bot,api,release",
			"skip-changelog": true
		},
		"frontend": {
			"package-name": "frontend",
			"release-type": "node",
			"include-component-in-tag": true,
			"extra-label": "bot,frontend,release",
			"skip-changelog": true
		}
	}
}
